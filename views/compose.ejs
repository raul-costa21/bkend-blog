<%- include('partials/header'); -%>

<h2>Compose</h2>

<form action="/compose" method="post">

  <div class=>
    <label for="title" class="compose-labels">Title</label>
    <input type="text" name="composeTitle" autocomplete="off" id="title" class="form-control" />

    <label for="post" class="compose-labels">Post</label>
    <textarea name="composePost" id="post" cols="30" rows="10" class="form-control"></textarea>
  </div>

  <button type="submit" class="btn compose-button">Publish</button>
</form>

